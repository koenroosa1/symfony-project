{% extends 'base.html.twig' %}

{% block title %}Overzicht Kok{% endblock %}

{% block body %}
    <h2>Gerechten die klaar zijn</h2>
    <table class="table">

        <thead>
        <tr>
            <th>Gerecht</th>
            <th>Aantal</th>
        </tr>
        </thead>
        <tbody>
        {% for bestelling in bestellings %}
            {% if bestelling.klaar == 1 %}
                {% if bestelling.Datum == 'now'|date('Y-m-d') %}
                    {% if bestelling.MenuItemcode == 1 or bestelling.MenuItemcode == 2 or bestelling.MenuItemcode == 3 or bestelling.MenuItemcode == 8 or bestelling.MenuItemcode == 9 %}
                        <tr>
                            <td>{{ bestelling.MenuItem }}</td>
                            <td>{{ bestelling.Aantal }}</td>
                        </tr>
                    {% endif %}
                {% endif %}
            {% endif %}
        {% endfor %}
    </table>

    <h2>Drankjes die klaar zijn</h2>
    <table class="table">

        <thead>
        <tr>
            <th>Drankje</th>
            <th>Aantal</th>
        </tr>
        </thead>
        <tbody>
        {% for bestelling in bestellings %}
            {% if bestelling.klaar == 1 %}
                {% if bestelling.Datum == 'now'|date('Y-m-d') %}
                    {% if bestelling.MenuItemcode == 4 or bestelling.MenuItemcode == 5 or bestelling.MenuItemcode == 6 or bestelling.MenuItemcode == 7 %}
                        <tr>
                            <td>{{ bestelling.MenuItem }}</td>
                            <td>{{ bestelling.Aantal }}</td>
                        </tr>
                    {% endif %}
                {% endif %}
            {% endif %}
        {% endfor %}
    </table>
{% endblock %}

{% extends 'base.html.twig' %}

{% block title %}Bestelling{% endblock %}

{% block body %}

    <div class="text-center">
        <h2>Kloppen de ingevoerde gegevens</h2>
        <form method="post" action="{{ path('bestellingen_confirm') }}?id={{ app.request.get('id') }}" class="form">
            {% for item in data %}
                <label for="item{{ _key }}">{{ _key }}
                    <input type="number" name="{{ _key }}" value="{{ item }}" class="form-control">
                </label><br>
            {% endfor %}

            <button type="button" value="annuleren" onclick="location.href='/'" class="btn btn-danger">Anuleren
            </button>
            <input type="submit" class="btn btn-primary" value="Opslaan">
        </form>
    </div>


    {% endblock %}
